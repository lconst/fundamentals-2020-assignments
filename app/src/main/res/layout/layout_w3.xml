<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/space_4x">

    <TextView
        android:id="@+id/textOne"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorMyGray"
        android:gravity="center"
        android:text="@string/solutions_box_one_text"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="textOne" />

    <TextView
        android:id="@+id/textYellow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/space_4x"
        android:layout_marginEnd="@dimen/space_2x"
        android:background="@color/colorMyYellow"
        android:gravity="center"
        android:padding="@dimen/space_4x"
        android:text="@string/solutions_box_two_text"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@+id/textBlue"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrier3" />

    <TextView
        android:id="@+id/textRed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/space_4x"
        android:layout_marginBottom="@dimen/space_4x"
        android:background="@color/colorMyRed"
        android:padding="@dimen/space_4x"
        android:text="@string/solutions_box_three_text"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/textGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/barrier3" />

    <TextView
        android:id="@+id/textGreen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_2x"
        android:layout_marginBottom="@dimen/space_4x"
        android:background="@color/colorMyGreen"
        android:padding="@dimen/space_4x"
        android:text="@string/solutions_button_green_text"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/textBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/textRed" />

    <TextView
        android:id="@+id/textBlue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_2x"
        android:layout_marginBottom="@dimen/space_4x"
        android:background="@color/colorMyBlue"
        android:padding="@dimen/space_4x"
        android:text="@string/solutions_box_five_text"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/barrier4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/textGreen" />


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="textBlue, textYellow" />


</androidx.constraintlayout.widget.ConstraintLayout>